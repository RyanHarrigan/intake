{% extends "public_base_single_column.jinja" %}


{%- block header_title -%}
{{ _("Thank you") }}
{%- endblock header_title -%}

{%- block section_class %}thanks{% endblock section_class -%}

{% block column_content %}
  <div class="next_steps">
  {%- for organization in organizations %}
    <p class="next_step {{ organization.slug }}">
      {%- if organization.county.slug != 'not_listed' %}
        To help you with {{ organization.county.name }} County, we sent your application to the
        <a href="{{ organization.get_absolute_url() }}">{{ organization.name }}</a>.
        {{ linkify(organization.long_confirmation_message) }}
      {%- else %}
        Next steps for {{ unlisted_counties }}:
        We will contact you in the next week with information on how to clear your record in {{ unlisted_counties }}
      {% endif %}
    </p>
  {%- endfor %}
  </div>

  <p>
    {{_("If you have any questions or concerns, please email us at")}}
    {{ linkify(content.cmr_email) }} 
    {{ _("or text us at")}}
    {{ linkify(content.cmr_phone_number) }} 
  </p>

  <div class="back_home_btn">
    <a href="{{ url('intake-home') }}" class="btn btn-default btn-lg call_to_action_button">
      <span class="main-action-text">
        {{ content.back_home_btn }}
      </span>
    </a>
  </div>
  
{% endblock column_content %}